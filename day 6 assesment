1) Reverse a string

  import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        String str=s.nextLine();
        char[] ch=str.toCharArray();
        int len=str.length();
        for(int i=len-2;i>=0;i--)
        {
        System.out.print(ch[i]);
        }
    }
}
