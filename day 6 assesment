  3) Count pairs in array

  import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        int size=s.nextInt();
        int val=s.nextInt();
        int a[]=new int[size];
        int count=0,i,j;
        for(i=0;i<size;i++)
        {
            a[i]=s.nextInt();
        }
        for(i=0;i<size;i++)
        {
            for(j=0;j<size;j++)
            {
                int num=a[i]-a[j];
                if(num==val)
                {
                    count++;
                }
            }
        }
        System.out.println(count);
    }
}
